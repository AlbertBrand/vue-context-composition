{
  "name": "vue-context-composition",
  "version": "0.2.1",
  "description": "Vue.js context composition",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertBrand/vue-context-composition.git"
  },
  "bugs": {
    "url": "https://github.com/AlbertBrand/vue-context-composition/issues"
  },
  "homepage": "https://github.com/AlbertBrand/vue-context-composition#readme",
  "author": "Albert Brand <abrand@xebia.com>",
  "keywords": [
    "vuejs",
    "vue",
    "context",
    "composition",
    "typescript"
  ],
  "main": "dist/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts\" --source-maps",
    "check-git": "[[ -z $(git status --porcelain) ]] || (echo 'Repo not clean'; false)",
    "preversion": "npm run check-git && npm run test:lint && npm test",
    "version": "npm run build && npm publish",
    "postversion": "VERSION=$(node -p \"require('./package.json').version\") && git add -A && git commit -m $VERSION && git tag v$VERSION -m '' && git push --follow-tags",
    "lint": "eslint --fix src/**/*.ts tests/**/*.ts && prettier .*.js package.json tsconfig.json tests/tsconfig.json --write --loglevel warn",
    "test": "jest",
    "test:lint": "eslint --max-warnings 0 src/**/*.ts tests/**/*.ts && prettier .*.js package.json tsconfig.json tests/tsconfig.json --check",
    "test:cov": "jest --coverage"
  },
  "peerDependencies": {
    "core-js": "^3.8.1",
    "vue": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/runtime-corejs3": "^7.12.5",
    "@types/jest": "^26.0.18",
    "@vue/test-utils": "^2.0.0-beta.10",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "core-js": "^3.8.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "flush-promises": "^1.0.2",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2",
    "vue": "^3.0.2",
    "vue-jest": "^5.0.0-alpha.6"
  }
}
